<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Chari.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Btn Primary -->
    <style name="Widget.Chari.Button.BtnPrimary" parent="Widget.Chari.Button">
        <item name="android:textColor">@color/btn_primary_text_color_state_list</item>
        <item name="android:background">@drawable/btn_primary_state_list</item>
    </style>

    <style name="Widget.Chari.Button.BtnPrimary.Large">
        <item name="android:textAppearance">@style/titleMedium</item>
        <item name="android:textColor">@color/btn_primary_text_color_state_list</item>
        <item name="android:height">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="Widget.Chari.Button.BtnPrimary.Medium">
        <item name="android:textAppearance">@style/titleMedium</item>
        <item name="android:height">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Chari.Button.BtnPrimary.Small">
        <item name="android:textAppearance">@style/titleSmall</item>
        <item name="android:height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
