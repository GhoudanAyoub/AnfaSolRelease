<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_height="40dp"
    tools:layout_width="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_pastel"
        android:baselineAligned="false"
        android:gravity="center"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <FrameLayout
            android:id="@+id/left_radio_btn_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_primary"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/left_radio_btn_text"
                style="@style/labelLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/content_white"
                tools:text="Français" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/left_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:button="@null"
                android:clickable="false"
                android:enabled="false" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/right_radio_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/right_radio_btn_text"
                style="@style/labelLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/brand_primary"
                tools:text="العربية" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/right_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:button="@null"
                android:clickable="false"
                android:enabled="false" />

        </FrameLayout>

    </LinearLayout>

</merge>
