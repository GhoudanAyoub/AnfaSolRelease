<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_outilned"
    android:minWidth="214dp"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_m">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading_progress"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:progressTint="@color/brand_hover"

        app:indicatorColor="@color/brand_hover" />

    <TextView
        android:id="@+id/loading_label"
        style="@style/labelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_toEndOf="@+id/loading_progress"
        android:text="@string/onboarding_phone_number_loader_label" />

</RelativeLayout>
